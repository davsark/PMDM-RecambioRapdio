<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:minHeight="60dp">

        <!-- Nombre del producto (alineado a la izquierda) -->
        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btnRestar"
            android:text="Nombre Producto"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginEnd="8dp"/>

        <!-- Botón Eliminar (papelera personalizada) -->
        <ImageButton
            android:id="@+id/btnEliminar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/trash_full"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Eliminar producto"
            android:scaleType="centerInside"/>

        <!-- Precio Total (a la izquierda de la papelera) -->
        <TextView
            android:id="@+id/txtTotalLinea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/btnEliminar"
            android:layout_centerVertical="true"
            android:text="0.00 €"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/texto"
            android:minWidth="70dp"
            android:gravity="end"
            android:layout_marginEnd="8dp"/>

        <!-- Botón Sumar (a la izquierda del precio) -->
        <ImageButton
            android:id="@+id/btnSumar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_toStartOf="@+id/txtTotalLinea"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_sumar_dorado"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Sumar cantidad"
            android:scaleType="centerInside"
            android:layout_marginEnd="4dp"/>

        <!-- Cantidad (a la izquierda del botón sumar) -->
        <TextView
            android:id="@+id/txtCantidad"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/btnSumar"
            android:layout_centerVertical="true"
            android:text="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"/>

        <!-- Botón Restar (a la izquierda de la cantidad) -->
        <ImageButton
            android:id="@+id/btnRestar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_toStartOf="@+id/txtCantidad"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_boton_restar"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Restar cantidad"
            android:scaleType="centerInside"
            android:layout_marginEnd="4dp"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>